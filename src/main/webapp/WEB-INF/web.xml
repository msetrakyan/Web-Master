<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  

  <servlet>
    <servlet-name>homeServlet</servlet-name>
    <servlet-class>com.smartcode.web.controller.HomeServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>homeServlet</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>register</servlet-name>
    <servlet-class>com.smartcode.web.controller.RegisterServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>register</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.smartcode.web.controller.LoginServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>comment</servlet-name>
    <servlet-class>com.smartcode.web.controller.CommentServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>comment</servlet-name>
    <url-pattern>/comment</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>commentUpdate</servlet-name>
    <servlet-class>com.smartcode.web.controller.CommentUpdateServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>commentUpdate</servlet-name>
    <url-pattern>/commentUpdate</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>changePassword</servlet-name>
    <servlet-class>com.smartcode.web.controller.PasswordServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>changePassword</servlet-name>
    <url-pattern>/changePassword</url-pattern>
  </servlet-mapping>






</web-app>